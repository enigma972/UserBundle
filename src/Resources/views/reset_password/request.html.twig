{% extends "@Enigma972User/layout.html.twig" %}

{% block section %}
    {% if resetLinkIsSended == false %}
        {% for message in app.session.flashBag.get('info') %}
            {{ message }}
        {% endfor %}
        
        <form action="{{ path('enigma_reset_password_request') }}" method="post" accept-charset="UTF-8">
            <label>Your email</label>
            <input type="email" name="email" value="{{ email }}" required="required" />
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_password_request') }}" required="required" />
            <button>Send code</button>
        </form>
    {% else %}
        Reset link is sended        
    {% endif %}
    
{% endblock %}